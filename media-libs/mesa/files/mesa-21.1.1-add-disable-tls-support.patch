From 016053edf317c7d6cdbd5005fba1ec6fd5decdd6 Mon Sep 17 00:00:00 2001
From: Jory Pratt <anarchy@gentoo.org>
Date: Tue, 1 Sep 2020 18:04:56 -0500
Subject: [PATCH] Allow to disable glx_tls for musl users

Signed-off-by: Jory Pratt <anarchy@gentoo.org>
---
 meson.build       | 4 +---
 meson_options.txt | 6 ++++++
 2 files changed, 7 insertions(+), 3 deletions(-)

diff --git a/meson.build b/meson.build
index 8ef1e5f71aa..e03fcd222c3 100644
--- a/meson.build
+++ b/meson.build
@@ -447,9 +447,7 @@ endif
 
 # Android uses emutls for versions <= P/28. For USE_ELF_TLS we need ELF TLS.
 use_elf_tls = false
-if (not ['freebsd', 'openbsd', 'haiku'].contains(host_machine.system()) and
-    (not with_platform_android or get_option('platform-sdk-version') >= 29) and
-    (not with_platform_windows or not with_shared_glapi))
+if get_option('elf-tls')
   pre_args += '-DUSE_ELF_TLS'
   use_elf_tls = true
 endif
diff --git a/meson_options.txt b/meson_options.txt
index a7030aba31e..fb4c47d70e1 100644
--- a/meson_options.txt
+++ b/meson_options.txt
@@ -367,6 +367,12 @@ option(
   value : false,
   description : 'Build an SELinux-aware Mesa'
 )
+option(
+  'elf-tls',
+  type : 'boolean',
+  value : true,
+  description : 'Enable thread-local storage in GLX and EGL'
+)
 option(
   'osmesa',
   type : 'boolean',
